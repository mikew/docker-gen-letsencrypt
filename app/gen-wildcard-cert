#!/usr/bin/env bash

if [ -f /etc/nginx/certs/wildcard.crt ]; then
  exit
fi

/app/acme.sh \
  --issue \
  --dns dns_aws \
  -d "$LETSENCRYPT_DOMAIN" \
  -d "*.$LETSENCRYPT_DOMAIN" \
  --accountemail "$LETSENCRYPT_EMAIL" \
  --cert-file "/etc/nginx/certs/wildcard.crt" \
  --key-file "/etc/nginx/certs/wildcard.key"
